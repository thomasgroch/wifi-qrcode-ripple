    @media (max-width: 768px) {
      .features {
        grid-template-columns: 1fr;
      }
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.02);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.05);
