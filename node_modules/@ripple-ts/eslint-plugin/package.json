{
  "name": "@ripple-ts/eslint-plugin",
  "version": "0.2.212",
  "description": "ESLint plugin for Ripple",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "ripple"
  ],
  "author": "Dominic Gannaway",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ripple-TS/ripple.git",
    "directory": "packages/eslint-plugin"
  },
  "bugs": {
    "url": "https://github.com/Ripple-TS/ripple/issues"
  },
  "homepage": "https://ripplejs.com",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@ripple-ts/eslint-parser": "0.2.212"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "@types/node": "^24.3.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.0.0",
    "tsdown": "^0.15.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@ripple-ts/eslint-parser": "0.2.212"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dist": "perl -pi -e 's/\"main\": \"src\\/index.ts\"/\"main\": \"dist\\/index.js\"/' package.json",
    "src": "perl -pi -e 's/\"main\": \"dist\\/index.js\"/\"main\": \"src\\/index.ts\"/' package.json",
    "build": "pnpm dist && tsdown && pnpm src || pnpm src",
    "test": "vitest run",
    "test:watch": "vitest"
  }
}